<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nttr.panobumapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AlbumApplication"
        android:allowBackup="true"
        android:icon="@drawable/panoralbum_icon_squar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/panoralbum_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SampleActivity" />
        <activity android:name=".AlbumActivity" />
        <activity
            android:name=".CreateAlbumActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".EditAlbumActivity" />
    </application>

</manifest>